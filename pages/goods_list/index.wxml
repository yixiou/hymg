<!-- 搜索框 -->
<SearchInput></SearchInput>
<Tabs tabs="{{tabs}}"
binditemChange="handleItemChange"
>
<block wx:if="{{tabs[0].isActive}}">
    <view class="first_tab">
        <view class="goods_group"
        wx:for="{{goodsList}}"
        wx:key="goods_id"
        >
        <!-- 左侧图片 -->
            <view class="goods_img_wrap">
                <image mode="widthFix" src="{{item.goods_small_logo || 'https://ss3.bdstatic.com/70cFv8Sh_Q1YnxGkpoWK1HF6hhy/it/u=686516802,2403556179&fm=15&gp=0.jpg'}}" />
            </view>
            <!-- 右侧商品 -->
            <view class="goods_info_wrap">
                <view class="goods_name">{{item.goods_name}}</view>
                <view class="goods_price">￥{{item.goods_price}}</view>
            </view>
        </view>

    </view>
</block>
<block wx:if="{{tabs[1].isActive}}"></block>
<block wx:if="{{tabs[2].isActive}}"></block>



</Tabs>