.first_tab .goods_group {
  display: flex;
  border-bottom: 1rpx solid #ccc;
}
.first_tab .goods_group .goods_img_wrap {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
}
.first_tab .goods_group .goods_img_wrap image {
  width: 70%;
}
.first_tab .goods_group .goods_info_wrap {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.first_tab .goods_group .goods_info_wrap .goods_name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  -webkit-line-clamp: 2;
  color: #000;
  font-size: 30rpx;
}
.first_tab .goods_group .goods_info_wrap .goods_price {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--themeColor);
}
