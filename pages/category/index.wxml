<!-- 搜索框 -->
<SearchInput></SearchInput>

<view class="cate_container">
    <!-- 
    当页面要出现 滚动效果的时候
    旧版本的小程序 view标签的是无法实现页面滚动
    overflow:scroll;
    可以优先使用 scroll-view   也是封装了一些属性 
    
   -->
<!-- 左侧菜单 -->
<scroll-view scroll-y class="left_menu">
    <view class="menu_item {{index===currentIndex?'active':''}}"
    wx:for="{{leftMenuList}}"
    wx:key="cat_id"
    bindtap="handleMenuChange"
    data-index="{{index}}"
    >
        {{item.cat_name}}
    </view>     
</scroll-view>
  
<!-- 右侧商品内容 -->
<scroll-view class="right_content">
    <view class="goods_group" 
    wx:for="{{rightGoodsList}}"
    wx:for-index="index1"
    wx:for-item="item1"
    wx:key="item"
    >
        <view class="goods_title"
        >
            <text class="delimiter">/</text>
            <text class="goods_name">{{item1.cat_name}}</text>
            <text class="delimiter">/</text>
        </view>
        <view class="goods_list">
            <navigator
            wx:for="{{item1.children}}"
            wx:for-index="index2"
            wx:for-item="item2"
            wx:key="cat_id"
            url="/pages/goods_list/index?id={{item2.cat_id}}"
            >
                <image mode="widthFix" src="{{item2.cat_icon}}"/>
                <view class="goods_cat_name">{{item2.cat_name}}</view>
            </navigator>
              
        </view>
    </view>
      
</scroll-view>
  


</view>
  